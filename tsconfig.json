{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist/js/",

    // Environment Settings - Simple JS output
    "module": "None",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    // Output Options
    "sourceMap": true,

    // Type Safety (the good stuff!)
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Simple mode - no module complexity
    "moduleDetection": "legacy",
    "skipLibCheck": true
  },
  "include": ["src"]
}
